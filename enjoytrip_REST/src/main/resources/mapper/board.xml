<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.enjoytrip.board.model.mapper.BoardMapper">

	
	<resultMap type="boardDto" id="article">
		<result column="article_no" property="articleNo"/>
		<result column="user_id" property="userId"/>
		<result column="type" property="type"/>
		<result column="subject" property="subject"/>
		<result column="content" property="content"/>
		<result column="hit" property="hit"/>
		<result column="register_time" property="date"/>
	</resultMap>
	
	
	<insert id="registerFile" parameterType="boardDto">
		insert into file_info (article_no, save_folder, original_file, save_file)
		values
		<foreach collection="fileInfos" item="fileinfo" separator=" , ">
			(#{articleNo}, #{fileinfo.saveFolder}, #{fileinfo.originalFile}, #{fileinfo.saveFile})
		</foreach>
	</insert>
	
	<select id="announceList" resultMap="article">
		select * from board where type=1
	</select>


	<select id="viewAnnounce" parameterType="int" resultMap="article">
		select * from board 
		where article_no = #{articleNo}
	</select>


	<select id="freeList"  resultMap="article">
		select * from board where type=2
	</select>


	<select id="viewFree" parameterType="int" resultMap="article">
		select * from board 
		where article_no = #{articleNo}
	</select>


	<insert id="writeFree" parameterType="boardDto">
		insert into board(user_id, type, subject, content, hit)
		values (#{userId}, 2, #{subject}, #{content}, 0)
		<selectKey resultType="int" keyProperty="articleNo" order="AFTER">
			select last_insert_id()
		</selectKey>
	</insert>

	<insert id="writeAnnounce" parameterType="boardDto">
		insert into board(user_id, type, subject, content, hit)
		values (#{userId}, #{type}, #{subject}, #{content}, 0)
		<selectKey resultType="int" keyProperty="articleNo" order="AFTER">
			select last_insert_id()
		</selectKey>
	</insert>
	
	<update id="modifyFree" parameterType="boardDto">
		update board
		set subject=#{subject}, content=#{content} where article_no = #{articleNo}
	</update>
	
	<update id="modifyAnnounce" parameterType="boardDto">
		update board
		set subject=#{subject}, content=#{content} where article_no = #{articleNo}
	</update>
	
	<delete id="deleteFree" parameterType="int">
		delete from board
		where article_no = #{articleNo}
	</delete>
	
	<delete id="deleteAnnounce" parameterType="int">
		delete from board
		where article_no = #{articleNo}
	</delete>

	<select id="search"  parameterType="String" resultMap="article">
		select * from board where type=#{type} and subject like CONCAT('%', #{keyword}, '%')
	</select>
	
</mapper>